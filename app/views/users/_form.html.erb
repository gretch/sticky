<%= f.label :full_name, "Complete Name" %>
<%= f.text_field :full_name %><br />
<%= f.label :user_name %>
<%= f.text_field :user_name %> <br />
<%= f.label :email %>
<%= f.text_field :email %><br />
<% if current_user.eql?(@user) or @user.new_record? %>
  <%= f.label "Password" %>
  <%= f.password_field :password_salt %><br />
<% end %>

<% if authorized? and !@user.new_record? %>
  <label>Make Admin</label>
  <%= f.check_box :admin %>
<% end %>
